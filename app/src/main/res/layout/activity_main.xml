<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="38dp"
    android:paddingRight="38dp"
    tools:context="com.example.florian.projekt.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="HauptmenÃ¼"
        android:textAlignment="center"
         />

    <Button
        android:id="@+id/neuer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neue Dateien herunterladen"
        android:layout_gravity="center_vertical"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definitionssammlung"
        android:layout_gravity="center_horizontal"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/zurapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Infos zur App"
        android:layout_gravity="center_horizontal"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/abfrage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definitionsabfrage"
        android:layout_gravity="center_vertical"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Quiz"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

