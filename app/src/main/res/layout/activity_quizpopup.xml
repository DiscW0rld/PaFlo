<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context="com.example.florian.projekt.MainActivity">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Hier steht eine Frage" />


    <Button
        android:id="@+id/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/neues_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link zu einer Quiz-.xml eingeben" />

    <Spinner
        android:id="@+id/new_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neues Quiz herunterladen" />


</LinearLayout>

